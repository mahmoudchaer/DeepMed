FROM python:3.9-slim

WORKDIR /app

# Install dependencies for OpenCV and other required packages
RUN apt-get update && apt-get install -y \
    git \
    libgl1-mesa-glx \
    libglib2.0-0 \
    libsm6 \
    libxext6 \
    libxrender-dev \
    && apt-get clean && rm -rf /var/lib/apt/lists/*

# Copy requirements file
COPY requirements.txt .

# Install dependencies
RUN pip install --no-cache-dir -r requirements.txt \
    flask==2.0.1 Werkzeug==2.0.1 python-dotenv==0.19.0 pyyaml

# Copy our service code
COPY object_detection_service.py .

# Environment variables
ENV PORT=5027

# Expose the port
EXPOSE 5027

# Run the service
CMD ["python", "object_detection_service.py"] 