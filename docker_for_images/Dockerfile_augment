FROM python:3.9-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    gcc \
    libc6-dev \
    libgl1-mesa-glx \
    libglib2.0-0 \
    libsm6 \
    libxrender1 \
    libxext6 \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements first for better caching
COPY requirements_data_aug.txt .
RUN pip install --no-cache-dir -r requirements_data_aug.txt

# Copy application code
COPY data_augmentation.py .

# Expose port
EXPOSE 5023

# Create an augment_service.py file that will run the augmentation service
COPY augment_service.py .

# Run the application
CMD ["python", "augment_service.py"] 