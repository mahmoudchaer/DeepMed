FROM python:3.9-slim

WORKDIR /app

# Install dependencies
COPY requirements.medical_assistant.txt .
RUN pip install --no-cache-dir -r requirements.medical_assistant.txt

# Copy application code
COPY medical_assistant_api.py .

# Environment variables
ENV PYTHONUNBUFFERED=1
ENV PORT=5005

# Expose the port
EXPOSE ${PORT}

# Run the application
CMD ["python", "medical_assistant_api.py"] 