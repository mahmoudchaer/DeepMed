FROM python:3.9-slim

WORKDIR /app

COPY requirements.regression_models.txt .
RUN pip install --no-cache-dir -r requirements.regression_models.txt

COPY linear_regression_api.py .

# Create directories for models and MLflow
RUN mkdir -p saved_models/linear_regression mlruns

# Set environment variables
ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1
ENV MLFLOW_EXPERIMENT_NAME=linear_regression_model
ENV PORT=6010

EXPOSE 6010

CMD ["python", "linear_regression_api.py"] 