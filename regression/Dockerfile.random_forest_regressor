FROM python:3.9-slim

WORKDIR /app

COPY requirements.regression_models.txt .
RUN pip install --no-cache-dir -r requirements.regression_models.txt

COPY random_forest_regressor_api.py .

# Create directories for models and MLflow
RUN mkdir -p saved_models/random_forest_regressor mlruns

# Set environment variables
ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1
ENV MLFLOW_EXPERIMENT_NAME=random_forest_regressor_model
ENV PORT=6013

EXPOSE 6013

CMD ["python", "random_forest_regressor_api.py"] 