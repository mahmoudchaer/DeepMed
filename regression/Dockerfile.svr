FROM python:3.9-slim

WORKDIR /app

COPY requirements.regression_models.txt .
RUN pip install --no-cache-dir -r requirements.regression_models.txt

COPY svr_api.py .

# Create directories for models and MLflow
RUN mkdir -p saved_models/svr mlruns

# Set environment variables
ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1
ENV MLFLOW_EXPERIMENT_NAME=svr_model
ENV PORT=6014

EXPOSE 6014

CMD ["python", "svr_api.py"] 